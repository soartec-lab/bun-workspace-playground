{
  "name": "bun-workspace-playground",
  "postCreateCommand": "bash ./.devcontainer/post-create.sh",
  "dockerComposeFile": [
    "../compose.yml"
  ],
  "service": "app",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": false
      },
      "extensions": [
        "github.copilot",
        "github.copilot-chat"
      ]
    }
  }
}
